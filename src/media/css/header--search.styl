@import 'lib';

mkt-header-child.header--search {
    display: flex;
}

.header--search-toggle {
    image-replacement('../img/nav/search.svg', 40px, 40px);
    background-size: 40px 140px;
    appearance: none;
    border: 0;
    cursor: pointer;
    display: inline-block;
    position: relative;

    &.mkt-header-child--visible {
        background-position: 0 -100px;
    }
}

.header--search {
    padding: 0;
    justify-content: center;
}

.header--search-form {
    height: 100%;
    width: 100%;
}


.header--search-input {
    background: transparent;
}
.header-child--input-placeholder:after {
    background: transparent url(../img/nav/search.svg) 0 -92px / 40px 140px no-repeat;
    content: '';
    display: inline-block;
    height: 40px;
    margin: 15px 0;
    width: 40px;
    position: absolute;
    top: -10px;

    +ltr() {
        left: 0;
    }
    +rtl() {
        right: 0;
    }
}
